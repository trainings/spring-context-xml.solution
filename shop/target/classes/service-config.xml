<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	xmlns:p="http://www.springframework.org/schema/p">

	<bean id="orderService" class="org.shop.api.impl.OrderServiceImpl">
		<property name="orderRepository" ref="orderRepository" />
		<property name="itemRepository" ref="itemRepository" />
	</bean>
	
	<bean id="proposalService" class="org.shop.api.impl.ProposalServiceImpl" p:repository-ref="proposalRepository"/>
	
	<bean id="productService" class="org.shop.api.impl.ProductServiceImpl">
		<constructor-arg ref="productRepository"/>
	</bean>
	
	<bean id="sellerService" class="org.shop.api.impl.SellerServiceImpl" autowire="byType"/>
	
	<bean id="userService" class="org.shop.api.impl.UserServiceImpl" autowire="byType"/>
</beans>
